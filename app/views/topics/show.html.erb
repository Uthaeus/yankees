<div class="container">
  <div class="row">
    <div class="col-md-8">

      <h2><%= @topic.title %></h2>

      <h4><%= @topic.subtitle %></h4>

      <div class="well">
        <%= @topic.body %>
      </div>

      <hr />

      <% if !current_user.is_a? GuestUser %>
        <%= render 'comments/comment_form' %>
      <% end %>

      <div id="comments" data-topic-id="<%= @topic.id %>" >
        <%= render @topic.comments %>
      </div>

      <div>
        <%= link_to 'Edit', edit_topic_path(@topic), class: 'btn' %> |
        <%= link_to 'Back', topics_path, class: 'btn' %> | <%= link_to 'Delete', @topic, class: 'btn', method: :delete, data: {confirm: 'Are you sure?'} %>
      </div>
    </div>
  </div>
</div>