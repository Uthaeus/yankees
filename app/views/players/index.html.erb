
<div class="container">
  <h1>Roster</h1>

  <% @players.each do |player| %>
    <div class="row featurette">
      <div class="col-md-8">
        
          <h6 class="featurette-heading"><%= link_to player.name, player %> #<%= player.number %></h6>
          
          <div class="row">
            <% player.positions.each do |p| %>
              <h4 class="lead">| <%= p.name %> |</h4>
            <% end %>
          </div>
          
        
      </div>
      <div class="col-md-4">
        <p>test</p>
      </div>
      
    </div>
    <hr class="featurette-divider">
  <% end %>

  <%= link_to 'New Player', new_player_path, class: "btn" %>
</div>

<hr class="featurette-divider">

