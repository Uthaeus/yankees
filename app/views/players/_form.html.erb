    
<div class="row">
  <div class="col-md-4">
    <%= form_with(model: player, local: true) do |f| %>
      <% if player.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

          <ul>
          <% player.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, id: :player_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :number %>
        <%= f.number_field :number, id: :player_number, class: 'form-control' %>
      </div>

      <div>
        <h3>Position</h3>
        <div>
          <%= f.fields_for :positions do |pos| %>
            <%= render 'position_fields', f: pos %>
          <% end %>
          <div>
            <%= link_to_add_association 'Add Position', f, :positions, class: 'btn btn-info btn-sm' %>
          </div>
        </div>
      </div>
      <br />
      <div class="form-group">
        <label class="btn btn-secondary">
          Upload a main image file <%= f.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group">
        <label class="btn btn-secondary">
          Upload a thumb image file <%= f.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>
      <div class="form-group">
        <%= f.submit "Save Player", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>
